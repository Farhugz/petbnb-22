<div class="p-5 bg-image" style="
          background-color: #68B984;
          backdrop-filter: blur(100px);
          height: 200px;
          "></div>

<div class="container big-container" style="
          margin-top: -100px">
  <div class="cards">
    <% @pet_homes.each do |pet_home| %>
      <%= link_to pet_home_path(pet_home) do %>
        <div class="card"  style="background-color: hsla(0, 0%, 100%, 0.8); backdrop-filter: blur(30px);">
          <%= image_tag "pic1.jpg" %>
          <div><p class="p-1">Name: <%= pet_home.name  %></p></div>
          <div><p class="p-2">Location: <%= pet_home.location %></p></div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
