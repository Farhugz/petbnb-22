<h1><strong> Pet Homes <strong></h1>

<div class="container">
  <div class="cards">
    <% @pet_homes.each do |pet_home| %>
      <div class="card"> <%= image_tag "pic1.jpg" %>
        <p><%= pet_home.name  %></p>
        <p><%= pet_home.location %></p>
      </div>

    <% end %>
  </div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
